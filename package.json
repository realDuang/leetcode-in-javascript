{
  "name": "leetcode-in-javascript",
  "version": "1.0.0",
  "private": true,
  "description": "使用js/ts的leetcode题解仓库",
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "vuepress": "^1.9.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vuepress-bar": "^0.4.4"
  },
  "scripts": {
    "dev": "vuepress dev docs",
    "build": "vuepress build docs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{js,ts}\" \"docs/.vuepress/config.ts\"",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "ts-node scripts/run-all.ts",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/realDuang/leetcode-in-javascript.git"
  },
  "keywords": [
    "leetcode"
  ],
  "author": "Duang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/realDuang/leetcode-in-javascript/issues"
  },
  "homepage": "https://github.com/realDuang/leetcode-in-javascript#readme"
}
